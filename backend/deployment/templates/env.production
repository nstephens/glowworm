# GlowWorm Production Environment Configuration
# Copy this file to /opt/glowworm/backend/.env and customize the values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=glowworm
DB_USER=glowworm
DB_PASSWORD=glowworm_password

# Application Configuration
SECRET_KEY=your_secret_key_here
UPLOAD_PATH=/opt/glowworm/backend/uploads
MAX_FILE_SIZE=104857600
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,http://10.10.10.2

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/glowworm/backend/logs/glowworm.log

# AI Model Configuration (Optional)
# Uncomment and configure the AI models you want to use
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# PERPLEXITY_API_KEY=your_perplexity_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here
# MISTRAL_API_KEY=your_mistral_api_key_here

# Azure OpenAI Configuration (Optional)
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# OpenRouter Configuration (Optional)
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama Configuration (Optional)
# OLLAMA_API_KEY=your_ollama_api_key_here
# OLLAMA_BASE_URL=http://localhost:11434/api

# Security Configuration
CSRF_SECRET_KEY=your_csrf_secret_key_here
SESSION_SECRET_KEY=your_session_secret_key_here

# Performance Configuration
CACHE_TTL=1800
MAX_CACHE_SIZE=2000
PRELOAD_CACHE_TTL=3600

# Backup Configuration
BACKUP_DIR=/opt/glowworm/backups
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=300
LOG_ROTATION_DAYS=30








